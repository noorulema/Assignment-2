<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".screen11">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/ab"
        android:layout_marginLeft="20dp"
        android:backgroundTint="@color/black"
        android:src="@drawable/back_arrow">

    </ImageButton>

    <TextView
        android:id="@+id/addplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ab"
        android:text="Record"
        android:textColor="#FFF"
        android:textSize="35dp">

    </TextView>

    <ImageView
        android:id="@+id/upload"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="230dp"
        android:layout_below="@id/addplay"
        android:layout_centerHorizontal="true"
        android:src="@drawable/desp">

    </ImageView>






    <ImageView
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitEnd"
        android:src="@drawable/actionbar">
    </ImageView>


    <ImageView
        android:id="@+id/like"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/upload"
        android:layout_marginTop="295dp"
        android:src="@drawable/like1"></ImageView>

    <ImageView
        android:id="@+id/add"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/upload"
        android:layout_marginTop="310dp"
        android:layout_toRightOf="@id/like"
        android:background="@color/black"
        android:src="@drawable/add1">

    </ImageView>

    <ImageView
        android:id="@+id/search"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/upload"
        android:layout_marginTop="295dp"
        android:layout_toRightOf="@id/add"
        android:src="@drawable/search1"></ImageView>

    <ImageView
        android:id="@+id/later"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/upload"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="295dp"
        android:layout_toRightOf="@id/search"
        android:src="@drawable/llater"></ImageView>


    <ImageButton
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/upload"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="250dp"
        android:background="#000"
        android:src="@drawable/record">


    </ImageButton>

</RelativeLayout>