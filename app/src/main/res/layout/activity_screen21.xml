<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:weightSum="3"
    android:orientation="vertical"
    tools:context=".screen21">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="950dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="5dp"
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/back"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_marginStart="150dp"
                android:layout_marginTop="30dp"
                android:text="Listen Later"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20sp"
                android:text="2 Options / Right Selected"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="20dp"
                android:paddingEnd="10dp"
                android:src="@drawable/hollowrectangle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="30dp"
                android:elevation="100dp"
                android:text="Playlist"
                android:textColor="@color/white" />

            <TextView
                android:layout_marginStart="240dp"
                android:background="@drawable/yellow"
                android:backgroundTint="#FFC107"
                android:gravity="center"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Music"
                android:textColor="@color/black"
                android:elevation="100dp"/>




        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="104dp">


            <ImageView
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:src="@drawable/desp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song Name"
                android:textColor="@color/white"
                android:layout_marginStart="150dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150dp"
                android:layout_marginTop="50dp"
                android:text="Artist"
                android:textColor="#FFD700"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/moreoptn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="3:01"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="104dp">


            <ImageView
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:layout_marginStart="40dp"
                android:src="@drawable/disk" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Song Name"
                android:textColor="@color/white"
                android:layout_marginStart="150dp"
                android:layout_marginTop="20dp"
                android:textSize="20sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Artist"
                android:textColor="#FFD700"
                android:layout_marginStart="150dp"
                android:layout_marginTop="50dp"
                android:textSize="20sp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="35dp"
                android:src="@drawable/moreoptn" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="0:24"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="30dp"/>
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:background="@drawable/actionbar"
        android:layout_weight="2"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/like"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/like1">
        </ImageView>

        <ImageView
            android:id="@+id/add"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/like"
            android:layout_alignParentBottom="true"
            android:src="@drawable/add1">

        </ImageView>

        <ImageView
            android:id="@+id/search"
            android:layout_width="100dp"
            android:layout_alignParentBottom="true"
            android:layout_height="100dp"
            android:layout_toRightOf="@id/add"
            android:src="@drawable/search1"></ImageView>

        <ImageView
            android:id="@+id/later"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:background="@color/black"
            android:layout_toRightOf="@id/search"
            android:src="@drawable/llater"></ImageView>



        <ImageView
            android:id="@+id/record"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/rtime"
            android:layout_marginLeft="167dp"
            android:layout_marginBottom="250dp"
            android:background="#000"
            android:paddingBottom="10dp"
            android:src="@drawable/record">

        </ImageView>

    </LinearLayout>


</LinearLayout>