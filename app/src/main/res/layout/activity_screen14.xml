<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".screen14">


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ab"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/black"
        android:src="@drawable/back_arrow">

    </ImageButton>

    <TextView
        android:id="@+id/addplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/ab"
        android:text="Record"
        android:textColor="#FFF"
        android:textSize="35dp">

    </TextView>

    <ImageView
        android:id="@+id/upload"
        android:layout_width="300dp"
        android:layout_marginTop="20dp"
        android:layout_height="230dp"
        android:layout_below="@id/addplay"
        android:layout_centerHorizontal="true"
        android:src="@drawable/desp">

    </ImageView>






    <ImageView
        android:id="@+id/actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitEnd"
        android:src="@drawable/actionbar">
    </ImageView>


    <ImageView
        android:id="@+id/like"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/upload"
        android:layout_marginTop="295dp"
        android:src="@drawable/like1"></ImageView>

    <ImageView
        android:id="@+id/add"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/upload"
        android:layout_marginTop="310dp"
        android:layout_toRightOf="@id/like"
        android:background="@color/black"
        android:src="@drawable/add1">

    </ImageView>

    <ImageView
        android:id="@+id/search"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/upload"
        android:layout_marginTop="295dp"
        android:layout_toRightOf="@id/add"
        android:src="@drawable/search1"></ImageView>

    <ImageView
        android:id="@+id/later"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/upload"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="295dp"
        android:layout_toRightOf="@id/search"
        android:src="@drawable/llater"></ImageView>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/line"
        android:layout_below="@id/upload"
        android:layout_marginLeft="50dp"
        android:src="@drawable/barprog">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/line"
        android:text="0:00/2:45"
        android:id="@+id/rtime"
        android:layout_centerHorizontal="true"
        android:textColor="#FFC107"
        android:textSize="20dp">

    </TextView>

    <ImageView
        android:id="@+id/record"
        android:layout_width="50dp"
        android:layout_height="100dp"
        android:layout_below="@id/rtime"
        android:layout_marginLeft="160dp"
        android:layout_marginBottom="230dp"
        android:background="#000"
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/record">

    </ImageView>

    <ImageView
        android:id="@+id/pause"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@id/rtime"
        android:layout_marginBottom="230dp"
        android:layout_toRightOf="@id/record"
        android:background="#000"
        android:paddingRight="40dp"
        android:paddingTop="5dp"
        android:paddingBottom="15dp"
        android:src="@drawable/pausebutton">

    </ImageView>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/addplay"
        android:text="Next"
        android:textColor="#FFC107"
        android:textSize="23dp">

    </TextView>



</RelativeLayout>